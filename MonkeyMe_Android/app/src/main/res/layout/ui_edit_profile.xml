<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#7B827E"
    android:orientation="vertical">
    //상단 네비게이션
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/TitleBar"
        android:background="@color/MonkeyBlue"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="취소"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CancelBtn"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:textColor="#ffffff"
            android:typeface="sans"
            android:textSize="20dp" />

        <TextView
            android:text="프로필 수정"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:textSize="22dp"
            android:textColor="#ffffff"
            android:typeface="sans"
            android:textIsSelectable="false" />

        <TextView
            android:text="완료"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/OkBtn"
            android:src="@drawable/ok"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:typeface="sans"
            android:textSize="20dp"
            android:textColor="#ffffff" />

    </RelativeLayout>
    //profile bar
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0"
        android:id="@+id/ProfileBar"
        android:background="#F5F6F1"
        android:layout_marginTop="10dp">

        <it.meenie.monkeymeandroid.CustomImageView.BorderCircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:border_color="@color/MonkeyBlue"
            app:border_width="1dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/PictureView"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/person"
            android:scaleType="centerCrop"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PhotoEditBtn"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/goprof"
            android:layout_alignTop="@+id/EditTxt"
            android:layout_alignBottom="@+id/EditTxt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="프로필 사진 수정하기"
            android:id="@+id/EditTxt"
            android:typeface="sans"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/PictureView"
            android:layout_toEndOf="@+id/ProfileView"
            android:textColor="@color/BackgroundGrey"
            android:textSize="16dp" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#F5F6F1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="이름"
                android:id="@+id/Name"
                android:textColor="@color/BackgroundGrey"
                android:layout_marginLeft="15dp"
                android:typeface="sans"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="송혜교"
                android:id="@+id/EditTxt"
                android:layout_gravity="center_vertical"
                android:typeface="sans"
                android:textColor="@color/LightGrey"
                android:textSize="16dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:id="@+id/imageView7"
            android:background="#30000000"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ID"
                android:id="@+id/ID"
                android:textColor="@color/BackgroundGrey"
                android:layout_marginLeft="15dp"
                android:typeface="sans"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="hyekyo.song"
                android:id="@+id/IDTxt"
                android:layout_gravity="center_vertical"
                android:typeface="sans"
                android:textColor="@color/LightGrey"
                android:textSize="16dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:id="@+id/imageView8"
            android:background="#30000000"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="이메일"
                android:id="@+id/Email"
                android:textColor="@color/BackgroundGrey"
                android:layout_marginLeft="15dp"
                android:typeface="sans"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="song@kayadami.com"
                android:id="@+id/EmailTxt"
                android:layout_gravity="center_vertical"
                android:typeface="sans"
                android:textColor="@color/BackgroundGrey"
                android:textSize="16dp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0"
        android:id="@+id/relativeLayout"
        android:background="#F5F6F1"
        android:layout_marginTop="10dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView10"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/goprof"
            android:layout_alignTop="@+id/textView8"
            android:layout_alignBottom="@+id/textView8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="비밀번호 수정하기"
            android:id="@+id/textView8"
            android:typeface="sans"
            android:layout_centerVertical="true"
            android:textColor="@color/BackgroundGrey"
            android:layout_marginLeft="15dp"
            android:textSize="16dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="#F5F6F1" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="몽키 사진 공개범위 기본 설정"
                android:id="@+id/textView9"
                android:textColor="@color/BackgroundGrey"
                android:layout_marginLeft="15dp"
                android:typeface="sans"
                android:layout_gravity="center"
                android:gravity="center|center_vertical|center_horizontal"
                android:textSize="16dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:id="@+id/imageView9"
            android:background="#30000000"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="비공개"
                android:id="@+id/SecretBtn"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="40dp"
                android:textColor="@color/selector_text"
                android:typeface="sans"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="몽키친구"
                android:id="@+id/FriendsBtn"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_centerInParent="true"
                android:textColor="@color/selector_text"
                android:typeface="sans"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="공개"
                android:id="@+id/PublicBtn"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_centerInParent="true"
                android:layout_marginRight="40dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/selector_text"
                android:typeface="sans"
                android:textSize="16dp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
