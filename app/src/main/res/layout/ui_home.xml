<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/slidingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff"
        android:orientation="vertical"
        tools:context=".Test">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            //edit

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/ll_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        //title bar
                        <RelativeLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_vertical"
                            android:id="@+id/TitleBar"
                            android:background="@color/MonkeyBlue">

                            <ImageButton
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/Menu"
                                android:src="@drawable/menu"
                                android:scaleType="fitCenter"
                                android:background="#00000000"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:layout_centerInParent="true"
                                android:text="Monkey Me"
                                android:id="@+id/textView"
                                android:textSize="22dp"
                                android:textColor="#ffffff"
                                android:typeface="sans"
                                android:textIsSelectable="false" />
                            <ImageButton
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/Friends"
                                android:src="@drawable/friendslist"
                                android:scaleType="fitCenter"
                                android:background="#00000000"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>
                        //item bar
                        <RelativeLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="0"
                            android:id="@+id/ItemBar"
                            android:background="#979797">
                            //에너지
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="10dp">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:id="@+id/EnergyView"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/energy"
                                    android:layout_alignParentBottom="true"
                                    android:layout_gravity="center_vertical" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="energy"
                                    android:id="@+id/EnergyTxt"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/BananaYellow"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="2dp"
                                    android:typeface="sans" />
                            </LinearLayout>
                            //바나나
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_centerInParent="true">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:id="@+id/BananaView"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/banana"
                                    android:layout_alignParentBottom="true"
                                    android:layout_gravity="center_vertical" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="banana"
                                    android:id="@+id/BananaTxt"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/BananaYellow"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="2dp"
                                    android:typeface="sans" />
                            </LinearLayout>
                            //나뭇잎
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="10dp"
                                android:layout_alignParentEnd="false"
                                android:layout_alignParentRight="true">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:id="@+id/LeafView"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/mleaf"
                                    android:layout_alignParentBottom="true"
                                    android:layout_gravity="center_vertical" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="leaf"
                                    android:id="@+id/LeafTxt"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/BananaYellow"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="2dp"
                                    android:typeface="sans" />
                            </LinearLayout>

                        </RelativeLayout>
                        //profile bar
                        <RelativeLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="90dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="0"
                            android:clickable="true"
                            android:id="@+id/ProfileBar"
                            android:background="#F5F6F1">
                            <Button
                                android:id="@+id/ProfileBtn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#00000000"/>

                            <com.pkmmte.view.CircularImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/ProfileView"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:scaleType="centerCrop"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:src="@drawable/levc"
                                app:border="false"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/goprof"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="30dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="송혜교"
                                android:id="@+id/EditTxt"
                                android:layout_marginTop="25dp"
                                android:layout_alignParentTop="true"
                                android:typeface="sans"
                                android:layout_toRightOf="@+id/ProfileView"
                                android:textColor="@color/BackgroundGrey"
                                android:textSize="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Level ?"
                                android:id="@+id/LevelTxt"
                                android:layout_alignParentBottom="false"
                                android:typeface="sans"
                                android:layout_toRightOf="@+id/ProfileView"
                                android:textColor="@color/LightGrey"
                                android:textSize="12dp"
                                android:layout_below="@+id/EditTxt"
                                android:layout_marginTop="3dp" />
                        </RelativeLayout>
                        //contents

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:id="@+id/imageView11"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:background="#30000000" />





                            <ListView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:id="@+id/HomeList"
                                android:fastScrollEnabled="false"
                                android:clickable="true"
                                android:descendantFocusability="blocksDescendants"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LeftTab"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#008F9E"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/inbox"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FEFF85"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:text="Inbox"/>
            </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7FC6CE"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ranking"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FEFF85"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:text="Rankings"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7FC6CE"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/achieve"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FEFF85"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:text="Achievements"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7FC6CE"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/word"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FEFF85"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:text="Add your monkey"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7FC6CE"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/shop"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FEFF85"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:text="Shop"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7FC6CE"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/settings"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FEFF85"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:text="Settings"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7FC6CE"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/help"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FEFF85"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:text="Help"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7FC6CE"/>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/RightTab"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="#3A4249"
        android:orientation="vertical"
        android:layout_gravity="end">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="페이스북 친구"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"/>

        </LinearLayout>
</android.support.v4.widget.DrawerLayout>
