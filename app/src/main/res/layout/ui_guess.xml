<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3A4249">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/MonkeyBlue"
            >
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Guess!"
                android:textSize="22dp"
                android:textColor="#ffffff"
                android:typeface="sans"
                android:textIsSelectable="false" />
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/moreaction"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp">
            <LinearLayout
                android:id="@+id/firstlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >

                <com.pkmmte.view.CircularImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/GuessProfile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/levc"
                    app:border="false"/>
                <TextView
                    android:id="@+id/GuessName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="hyun taek"
                    android:textColor="#ffffff"
                    android:textSize="15dp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:id="@+id/GuessImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cloud"
                    android:scaleType="centerCrop"/>

            </RelativeLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/GuessHint"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:background="@drawable/guesshint"
                    android:typeface="sans"
                    android:visibility="invisible"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/HintBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/mleafbutton"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/MonkeyBlue"
                android:orientation="horizontal"
                android:gravity="center_vertical">


                <RelativeLayout
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_border"
                    android:layout_marginRight="5dp"
                    android:paddingRight="4dp"
                    android:paddingLeft="4dp"
                    android:gravity="center">
                    <GridView
                        android:id="@+id/LetterList"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:horizontalSpacing="2dp"
                        android:numColumns="3"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_alignParentBottom="true"/>


                    </RelativeLayout>

                <EditText
                    android:id="@+id/GuessInput"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:background="#ffffff"/>
                <ImageButton
                    android:id="@+id/GuessOk"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/send"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/redbox"
        android:layout_centerInParent="true"
        android:id="@+id/GuessWrong"
        android:visibility="invisible">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="다시 맞춰보세요!"
            android:textColor="#ffffff"
            android:typeface="sans"
            android:textSize="16dp"/>
    </FrameLayout>
</RelativeLayout>